.icon-yonghu:before { content: "\e63e"; }
.icon-mima:before { content: "\e626"; }
.icon-yanzheng:before { content: "\e60b"; }
.icon-close:before { content: "\e612"; }
.icon-biyan:before { content: "\e611"; }


.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/** 登陆，注册，忘记密码页面的样式--开始 */
.login .logo{
  width: 750rpx;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom:100rpx;
}
.login .logo .img{
  width: 300rpx;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login .set{
  margin: auto;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login .set view{
  width: 70rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #78ac47;
  border-right: 0;
  color: #78ac47;
}
.login .set .rightIcon{
  color: #cbcbcb;
}
.login .set input{
  width: 330rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #78ac47;
}
.login .sub{
  margin-top: 50rpx;
}
.login .sub view{
  width: 470rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #78ac47;
  border-radius: 40rpx;
  color: #fff;
  background-color: #78ac47;
}
.login .verification{
  margin: auto;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login .verification .iconfont,
.login .verification .getCode{
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #78ac47;
}
.login .verification .getCode{
  width: 170rpx;
}
.login .verification .getCode view{
  width: 170rpx;
  height: 60rpx;
  color: #2c4e0a;
  background-color: #e5f1dc;
  font-size: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.login .verification .iconfont{
  width: 70rpx;
  color: #78ac47;
}
.login .verification input{
  width: 230rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #78ac47;
}
.registered{
  margin: auto;
  width: 470rpx;
  height: 50rpx;
  font-size: 20rpx;
  color: #78ac47;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.registered .alter {
  color: #9f9f9f;
}


/* 设备信息描述 */
.productInfoTable{
  width: 710rpx;
  height: auto;
  margin: 20rpx;
}
.productInfoTable .productTitle{
  background-color: #78ac47 !important;
  color: #fff !important;
}
.productInfoTable image{
  width: 467rpx;
  height: 467rpx;
  margin: 20rpx;
}
.productInfoTable .item {
  background-color: #e9e9e9;
  width: 710rpx;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #eee;
  border-bottom: 0;
  color: #333;
}
.productInfoTable .item:last-of-type {
  border-bottom: 1rpx solid #eee;
}
.productInfoTable .item .con,
.productInfoTable .item .name{
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60rpx;
  height: auto;
  font-size: 30rpx;
}
.productInfoTable .item .name{
  width: 200rpx;
}
.productInfoTable .item .con{
  width: 507rpx;
  border-left: 1rpx solid #eee;
}


  
.listName{
  width: 750rpx;
  height:60rpx;
  line-height:60rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}
.listName view{
  float:left;
  font-weight:600;
  width:auto;
  height:60rpx;
  line-height:60rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  margin:0 20rpx;
  color:#333;
  font-size:35rpx;
}
.listCon{
  height: auto;
}
.listCon .title{
  background-color: #707070;
  color: #fff;
}
.listCon .item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
  width: 710rpx;
}
.listCon .item view{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  width: 117rpx;
  height: 60rpx;
  border: 1rpx solid #ccc;
  border-right: 0;
  border-bottom: 0;
  position: relative;
  font-size: 20rpx;
}

.complete, .undone{
  position: absolute !important;
  left: 0;
  z-index: -10;
  border: 0 !important;
}
.undone{
  background-color:#a7dd54;
}
.complete{
  background-color:#78ac47;
}

.item .info{
  background-color:#78ac47;
}

.listCon .item view:last-of-type{
  border-right: 1rpx solid #ccc;
}
.listCon .item:last-of-type view{
  border-bottom: 1rpx solid #ccc;
}