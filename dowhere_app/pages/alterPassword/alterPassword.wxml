<!--pages/alterPassword/alterPassword.wxml-->
<!-- 注册 -->
<view class="login">
  <view class="logo">
    <!-- logo图片 -->
    <image class="img" src="../../img/logo.jpg" />
  </view>
  <view class="form">
    <view class="set">
      <view class="iconfont icon-yonghu"></view>
      <input type="number" value="{{userName}}" bindinput="getUserName" />
      <view class="iconfont icon-close rightIcon"></view>
    </view>
    <view class="set">
      <view class="iconfont icon-mima"></view>
      <input type="password" value="{{userPaw}}" bindinput="getUserPaw" />
      <view class="iconfont icon-biyan rightIcon"></view>
    </view>
    <view class="set">
      <view class="iconfont icon-mima"></view>
      <input type="password" value="{{userPaw2}}" bindinput="getUserPaw2" />
      <view class="iconfont icon-biyan rightIcon"></view>
    </view>
    <view class="verification">
      <view class="iconfont icon-yanzheng"></view>
      <input type="text" value="{{verificationCode}}" bindinput="setVerificationCode" />
      <view class="getCode" bindtap="getVerificationCode">
        <view>获取验证码</view>
      </view>
    </view>
    <view class="set sub">
      <view bindtap="submit">提交</view>
    </view>
  </view>
</view>

