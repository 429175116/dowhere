<!--pages/product/product.wxml-->
<view class="timeSel">
  <view bindtap="monthData" class="{{time=='month'?'action':''}}">当月计划与完成</view>
  <view bindtap="yearData" class="{{time=='year'?'action':''}}">全年计划与完成</view>
</view>
<view class="projectList" wx:if="{{lv=='1' || lv=='3'}}">
  <block wx:for="{{projectListData}}" wx:for-item="itemSon">
    <view id="project{{itemSon.id}}" data-id="{{itemSon.id}}" bindtap="goProduct">{{itemSon.projectName}}</view>
  </block>
</view>
<!-- 产品列表 -->
<view class="charts">
  <view wx:if="{{lv=='1' || lv=='3'}}">
    <!-- 各部门完成情况 -->
    <ec-canvas id="plan-pie" canvas-id="plan-pie"></ec-canvas>
  </view>
  <view wx:if="{{lv=='1' || lv=='2'}}">
    <!-- 完成未完情况 -->
    <ec-canvas id="quantity-pie" canvas-id="quantity-pie"></ec-canvas>
  </view>
  <ec-canvas id="plan-bar" canvas-id="plan-bar" style="height:{{planBarHeight}}rpx"></ec-canvas>
</view>
