<!--pages/department/department.wxml-->
<!-- 部门 -->
<view class="charts">
  <ec-canvas id="plan-pie" canvas-id="plan-pie"></ec-canvas>
  <ec-canvas id="plan-bar" canvas-id="plan-bar" style="height:{{planBarHeight}}rpx"></ec-canvas>
</view>
<view class="listName">
  <view>产品列表</view>
</view>
<view class="listCon">
  <view class="item title">
    <view class="neme">产品名称</view>
    <view class="neme">当月完成</view>
    <view class="neme">当月未完</view>
    <view class="neme">年度完成</view>
    <view class="neme">年度未完</view>
    <view class="neme">操作</view>
  </view>
  <block wx:for="{{listData}}" wx:for-item="item" index="index">
    <view class="item">
      <view>{{item.name}}</view>
      <view>
        <view class="complete" style="width:{{(item.yearSchedule/item.yearPlan)*100}}%"></view>
        {{item.yearSchedule}}
      </view>
      <view>
        <view class="undone" style="width:{{((item.yearPlan-item.yearSchedule)/item.yearPlan)*100}}%"></view>
        {{item.yearPlan - item.yearSchedule}}
      </view>
      <view>
        <view class="complete" style="width:{{(item.monthSchedule/item.monthPlan)*100}}%"></view>
        {{item.monthSchedule}}
      </view>
      <view>
        <view class="undone" style="width:{{((item.monthPlan-item.monthSchedule)/item.monthPlan)*100}}%"></view>
        {{item.monthPlan - item.monthSchedule}}
      </view>
      <view>
        <view class="info" data-id="{{item.id}}" data-name="{{item.name}}" bindtap="goProdcutInfo">详情</view>
      </view>
    </view>
  </block>
  
</view>