/* pages/components/components.wxss */
/* 图表显示块 */
.charts{
  height: auto;
}
/* 图表样式 */
#plan-pie,
#plan-bar{
  width: 750rpx;
  height: 500rpx;
  display:block;
  border-bottom: 5rpx solid #999;
  padding: 20rpx 0;
}
#monthPlan-bar{
  width: 600rpx;
  /* height: 500rpx; */
  height: auto;
  display:block;
}

.item .info {
  width: 100rpx !important;
  height: 60rpx !important;
  font-size: 20rpx !important;
  border: 0 !important;
  color: #fff;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.monthlyData{
  width: 750rpx;
  height: auto;
  margin-bottom: 100rpx;
}
.monthlyData .table{
  width: 710rpx;
  margin: 0 20rpx;
}
.monthlyData .table .item{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 710rpx;
  min-height: 60rpx;
}
.month{
  width: 100rpx;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ED8C24;
  color: #fff;
}
.monthChart{
  width: 600rpx;
  height: 500rpx;
  /* display: flex;
  align-items: center;
  justify-content: center; */
}
.hideMonthChart{
  width: 600rpx;
  height:  60rpx !important;
}
.monthChart .selData{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.hideMonthChart view{
  display: none !important;
}
.remarks{
  width: 100%;
  height: auto;
}
.remarks view{
  width: 100%;
  height: auto;
  font-size: 25rpx;
  counter-reset: #999;
  margin-top: 20rpx;
}
.con input{
  text-align: center;
}