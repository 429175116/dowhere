/* pages/productInfo/productInfo.wxss */
/* 图表显示块 */
.charts{
  height: auto;
}
/* 图表样式 */
#plan-pie,
#plan-bar,
#monthPlan-bar{
  width: 750rpx;
  height: 500rpx;
  display:block;
}

.listName{
  width: 750rpx;
  height:60rpx;
  line-height:60rpx;
}
.listName view{
  float:left;
  font-weight:600;
  width:auto;
  height:60rpx;
  line-height:60rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  margin:0 20rpx;
  color:#333;
  font-size:35rpx;
}
.listCon{
  /* border: 1rpx solid #333; */
  height: auto;
}
.listCon .title{
  background-color: #ccc
}
.listCon .item {
  /* border: 1rpx solid #333; */
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
  width: 710rpx;
}
.listCon .item view{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  width: 117rpx;
  height: 60rpx;
  border: 1rpx solid #333;
  border-right: 0;
  border-bottom: 0;
  position: relative;
}
.listCon .item view:last-of-type{
  border-right: 1rpx solid #333;
}
.listCon .item:last-of-type view{
  border-bottom: 1rpx solid #333;
}
.item .info {
  width: 80rpx !important;
  height: 40rpx !important;
  background-color: #0099FF;
  border: 0 !important;
  color: #fff;
  border-radius: 5rpx;
}
.complete, .undone{
  position: absolute !important;
  left: 0;
  z-index: -10;
  border: 0 !important;
}
.complete{
  background-color: #32c5e9;
}
.undone{
  background-color: #67e0e3;
}

.monthlyData{
  width: 750rpx;
  height: auto;
}
.monthlyData .table{
  width: 710rpx;
  margin: 0 20rpx;
}
.monthlyData .table .item{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 710rpx;
}
.month{
  width: 100rpx;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.monthChart{
  width: 600rpx;
  height: 500rpx;
  /* display: flex;
  align-items: center;
  justify-content: center; */
}
.hideMonthChart{
  height: auto !important;
}
    