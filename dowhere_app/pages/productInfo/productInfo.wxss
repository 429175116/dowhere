/* pages/productInfo/productInfo.wxss */
/* 图表显示块 */
.charts{
  height: auto;
}
/* 图表样式 */
#plan-pie,
#plan-bar{
  width: 750rpx;
  height: 500rpx;
  display:block;
}
#monthPlan-bar{
  width: 600rpx;
  height: 500rpx;
  display:block;
}

.listCon .item view:last-of-type{
  border-right: 1rpx solid #333;
}
.listCon .item:last-of-type view{
  border-bottom: 1rpx solid #333;
}
.item .info {
  width: 60rpx !important;
  height: 40rpx !important;
  background-color: #0099FF;
  font-size: 20rpx !important;
  border: 0 !important;
  color: #fff;
  border-radius: 5rpx;
}
.complete, .undone{
  position: absolute !important;
  left: 0;
  z-index: -10;
  border: 0 !important;
}
.complete{
  background-color: #32c5e9;
}
.undone{
  background-color: #67e0e3;
}

.monthlyData{
  width: 750rpx;
  height: auto;
}
.monthlyData .table{
  width: 710rpx;
  margin: 0 20rpx;
}
.monthlyData .table .item{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 710rpx;
  min-height: 60rpx;
}
.month{
  width: 100rpx;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}
.monthChart{
  width: 600rpx;
  height: 500rpx;
  /* display: flex;
  align-items: center;
  justify-content: center; */
}
.hideMonthChart{
  width: 600rpx;
  height:  60rpx !important;
}

    